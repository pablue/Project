<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping 
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.edu.xyc.dm.model.Banji" table="dm_banji">
		<id name="bid" type="java.lang.Long" length="5">
			<generator class="increment"></generator>
		</id>
		<property name="bname" length="30"></property>
		<set name="courses" table="dm_banji_course">

			<key column="bid"></key>
			<many-to-many class="cn.edu.xyc.dm.model.Course" column="cid"
				fetch="join"></many-to-many>

		</set>
	</class>
</hibernate-mapping>