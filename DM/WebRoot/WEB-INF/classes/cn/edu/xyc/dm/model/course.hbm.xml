<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping 
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.edu.xyc.dm.model.Course" table="dm_course">
		<id name="cid" type="java.lang.Long" length="5">
			<generator class="increment"></generator>
		</id>
		<property name="cname" length="30"></property>

		<set name="teachers" table="dm_teacher_course">

			<key>
				<column name="cid"></column>
			</key>
			<many-to-many class="cn.edu.xyc.dm.model.Teacher"
				column="tid" fetch="join"></many-to-many>
		</set>

		<!--课程与班级表之间的多对多的关系 -->
		<set name="banjis" table="dm_banji_course">
			<key>
				<column name="cid"></column>
			</key>
			<many-to-many class="cn.edu.xyc.dm.model.Banji" column="bid"
				fetch="join"></many-to-many>
		</set>

		
		<set name="weektime" table="dm_course_week">
			<key>
			<column name="cid"></column></key>
			<many-to-many class="cn.edu.xyc.dm.model.WeekTime" column="wid"></many-to-many>
		</set>
	</class>
</hibernate-mapping>